<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="DesktopFilesCreatorWindow" parent="AdwApplicationWindow">
    <property name="default-width">509</property>
    <property name="default-height">503</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title" translatable="yes">Desktop Files Creator</property>
              </object>
            </property>
            <child>
              <object class="GtkButton" id="button_import">
                <property name="icon-name">document-open-symbolic</property>
                <property name="tooltip-text" translatable="yes">Import Desktop File</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="button_open">
                <property name="icon-name">folder-open-symbolic</property>
                <property name="tooltip-text" translatable="yes">Open Desktop Files Folder</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="button_create">
                <property name="icon-name">document-new-symbolic</property>
                <property name="tooltip-text" translatable="yes">Create Desktop File</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwToastOverlay" id="overlay">
          <property name="vexpand">True</property>
          <property name="child">
          <object class="GtkScrolledWindow">
            <property name="propagate-natural-width">False</property>
            <property name="propagate-natural-height">False</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">600</property>
                <property name="tightening-threshold">400</property>
                <property name="margin-top">36</property>
                <property name="margin-bottom">36</property>
                <child>
                  <object class="GtkListBox">
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Name</property>
                        <child>
                          <object class="GtkEntry" id="entry_name">
                            <property name="valign">center</property>
                            <property name="hexpand">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="clear_name">
                            <property name="visible">False</property>
                            <property name="icon-name">edit-clear-symbolic</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Exec</property>
                        <child>
                          <object class="GtkEntry" id="entry_exec">
                            <property name="valign">center</property>
                            <property name="hexpand">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="button_exec">
                            <property name="icon-name">folder-open-symbolic</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="clear_exec">
                            <property name="visible">False</property>
                            <property name="icon-name">edit-clear-symbolic</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Icon</property>
                        <child>
                          <object class="GtkEntry" id="entry_icon">
                            <property name="valign">center</property>
                            <property name="hexpand">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="button_icon">
                            <property name="icon-name">folder-open-symbolic</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="clear_icon">
                            <property name="visible">False</property>
                            <property name="icon-name">edit-clear-symbolic</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Categories</property>
                        <child>
                          <object class="GtkEntry" id="entry_categories">
                            <property name="valign">center</property>
                            <property name="hexpand">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkMenuButton" id="button_categories_select">
                            <property name="icon-name">view-list-symbolic</property>
                            <property name="valign">center</property>
                            <property name="tooltip-text" translatable="yes">Select Categories</property>
                            <style>
                              <class name="flat"/>
                            </style>
                            <property name="popover">
                              <object class="GtkPopover" id="popover_categories">
                                <child>
                                  <object class="GtkScrolledWindow">
                                    <property name="min-content-height">200</property>
                                    <property name="max-content-height">300</property>
                                    <property name="propagate-natural-width">True</property>
                                    <child>
                                      <object class="GtkBox" id="box_categories_list">
                                        <property name="orientation">vertical</property>
                                        <property name="spacing">6</property>
                                        <property name="margin-top">6</property>
                                        <property name="margin-bottom">6</property>
                                        <property name="margin-start">6</property>
                                        <property name="margin-end">6</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="clear_categories">
                            <property name="visible">False</property>
                            <property name="icon-name">edit-clear-symbolic</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Comment</property>
                        <child>
                          <object class="GtkEntry" id="entry_comment">
                            <property name="valign">center</property>
                            <property name="hexpand">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="clear_comment">
                            <property name="visible">False</property>
                            <property name="icon-name">edit-clear-symbolic</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Not Displayed in Menu</property>
                        <property name="activatable-widget">switch_no_display</property>
                        <child>
                          <object class="GtkSwitch" id="switch_no_display">
                            <property name="halign">end</property>
                            <property name="valign">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Run in Terminal</property>
                        <property name="activatable-widget">switch_terminal</property>
                        <child>
                          <object class="GtkSwitch" id="switch_terminal">
                            <property name="halign">end</property>
                            <property name="valign">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
           </object>
          </property>
         </object>
        </child>
      </object>
    </child>
  </template>
</interface>
